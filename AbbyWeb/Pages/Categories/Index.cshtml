@page
@model AbbyWeb.Pages.Categories.IndexModel
@{
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>            
                @foreach(var obj in Model.Categories)
                {
                    <tr>
                        <td>@obj.FirstName</td>
                        <td>@obj.LastName</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-page="Edit" asp-route-id="@obj.id" class="btn btn-primary mx-2">Edit</a>
                                <a asp-page="Delete" asp-route-id="@obj.id" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
                
            
        </tbody>
    </table>
</div>

