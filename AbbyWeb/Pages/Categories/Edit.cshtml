@page
@model AbbyWeb.Pages.Categories.EditModel
@{
}


<form method="post">
    <input asp-for="Category.id" hidden></input>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Category.FirstName"></label>
            <input asp-for="@Model.Category.FirstName" class="form-control" />
            <span asp-validation-for="@Model.Category.FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.LastName"></label>
            <input asp-for="@Model.Category.LastName" class="form-control" />
            <span asp-validation-for="@Model.Category.LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Edit</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back</a>
    </div>
</form>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}